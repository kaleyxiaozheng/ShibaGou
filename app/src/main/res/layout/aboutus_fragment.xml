<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    tools:context="com.example.yihanwang.myapplication.MapFragment">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/homepage"
            android:alpha="0.4"/>

        <TextView
            android:text="About us"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#45104502" >

        <Button
            android:id="@+id/findPlant"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_show_flora_button"
            android:onClick="toImagePage"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="24dp"/>

        <Button
            android:id="@+id/plantList"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_show_list_button"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dp"/>
    </RelativeLayout>

</LinearLayout>