<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    tools:context="com.example.yihanwang.myapplication.MapFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="30dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="18dp"
            >

            <ImageButton
                android:id="@+id/imageBtn1"
                android:layout_width="170dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/golddust_wattle"
                app:layout_constraintRight_toLeftOf="@+id/imageBtn2"
                android:layout_marginRight="26dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/imageBtn3"
                app:layout_constraintLeft_toLeftOf="parent" />

            <ImageButton
                android:id="@+id/imageBtn2"
                android:layout_width="170dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/lightwood"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/imageBtn4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="18dp">

            <ImageButton
                android:id="@+id/imageBtn3"
                android:layout_width="170dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/spike_watte"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/imageBtn4"
                android:layout_marginRight="26dp"/>

            <ImageButton
                android:id="@+id/imageBtn4"
                android:layout_width="170dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/pincushiionlily"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#45104502" >

        <!--<Button-->
            <!--android:id="@+id/takePhoto"-->
            <!--android:layout_width="40dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@drawable/camera"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_marginTop="8dp"-->
            <!--android:layout_marginLeft="24dp"/>-->

        <Button
            android:id="@+id/plantList"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:background="@drawable/list"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dp"/>
    </RelativeLayout>

</LinearLayout>