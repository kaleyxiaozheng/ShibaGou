<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yihanwang.myapplication.ImageActivity">




    <ImageButton
        android:id="@+id/imageBtn1"
        android:layout_width="165dp"
        android:layout_height="201dp"
        app:srcCompat="@drawable/golddust_wattle"
        app:layout_constraintRight_toLeftOf="@+id/imageBtn2"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageBtn3"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/imageBtn2"
        android:layout_width="170dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/lightwood"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageBtn4" />

    <ImageButton
        android:id="@+id/imageBtn3"
        android:layout_width="170dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/spike_watte"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toLeftOf="@+id/imageBtn4"
        android:layout_marginRight="8dp" />

    <ImageButton
        android:id="@+id/imageBtn4"
        android:layout_width="170dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/pincushiionlily"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
