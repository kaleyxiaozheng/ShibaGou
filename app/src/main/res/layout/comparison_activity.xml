<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wood_background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/imageNumInfo"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/imageNumBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@drawable/select_imagenumbers" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageNumBackground"
            android:layout_alignLeft="@id/imageNumBackground"
            android:layout_alignRight="@id/imageNumBackground"
            android:layout_alignTop="@id/imageNumBackground"
            android:layout_marginTop="65dp"
            android:gravity="center_horizontal"
            android:textColor="#fffcfb"
            android:textSize="24dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/plantname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:gravity="left"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rl_image_1"
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <com.example.yihanwang.myapplication.TouchImageView
                android:id="@+id/plantImage"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp" />

            <!--<ImageView-->
            <!--android:id="@+id/pin_1"-->
            <!--android:layout_width="70dp"-->
            <!--android:layout_height="70dp"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:src="@drawable/red" />-->
        </RelativeLayout>

        <TextView
            android:id="@+id/yourphoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:gravity="left"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rl_image_2"
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <com.example.yihanwang.myapplication.TouchImageView
                android:id="@+id/plantPhoto"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitXY" />

            <!--<ImageView-->
            <!--android:id="@+id/pin_2"-->
